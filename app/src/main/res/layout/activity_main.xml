<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:paddingTop="30sp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:id="@+id/button4Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:paddingBottom="10dp"
        android:background="#303030"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3Layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Button 4"
            android:textColor="#ffffff"
            android:textSize="20sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_rounded_white"
                android:onClick="onClicOnkButton4"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:text="ON"></Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:background="@drawable/btn_rounded_white"
                android:onClick="onCLickOffButton4"
                android:layout_margin="5dp"
                android:text="OFF"></Button>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="30sp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:id="@+id/button3Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:paddingBottom="10dp"
        android:background="#303030"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/button4Layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2Layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Button 3"
            android:textColor="#ffffff"
            android:textSize="20sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:background="@drawable/btn_rounded_white"
                android:onClick="onClicOnkButton3"
                android:layout_margin="5dp"
                android:text="ON"></Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:background="@drawable/btn_rounded_white"
                android:onClick="onCLickOffButton3"
                android:layout_margin="5dp"
                android:text="OFF"></Button>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/connectButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:onClick="onCLickConnetButton"
        android:text="Connect BlueTooth"
        android:textColor="#ffffff"
        android:background="@drawable/btn_rounded_gray"
        app:layout_constraintBottom_toTopOf="@+id/button1Layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:paddingTop="30sp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:id="@+id/button1Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:paddingBottom="10dp"
        android:background="#303030"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/button2Layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connectButton">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Button 1"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:layout_marginBottom="10dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:background="@drawable/btn_rounded_white"
                android:onClick="onClicOnkButton1"
                android:text="ON"
                android:layout_margin="5dp"></Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:background="@drawable/btn_rounded_white"
                android:onClick="onCLickOffButton1"
                android:text="OFF"
                android:layout_margin="5dp"></Button>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="30sp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:id="@+id/button2Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:paddingBottom="10dp"
        android:background="#303030"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/button3Layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1Layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Button 2"
            android:textColor="#ffffff"
            android:textSize="20sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="#000000"
                android:background="@drawable/btn_rounded_white"
                android:onClick="onClicOnkButton2"
                android:text="ON"></Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:background="@drawable/btn_rounded_white"
                android:onClick="onCLickOffButton2"
                android:layout_margin="5dp"
                android:text="OFF"></Button>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>